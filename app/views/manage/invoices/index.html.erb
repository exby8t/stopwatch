<h1>Listing invoices</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Developer</th>
    <th>Project</th>
    <th>Sent date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.developer %></td>
    <td><%= invoice.project %></td>
    <td><%= invoice.sent_date %></td>
    <td><%= link_to 'Show', manage_invoice_path(invoice) %></td>
    <td><%= link_to 'Edit', edit_manage_invoice_path(invoice) %></td>
    <td><%= link_to 'Destroy', manage_invoice_path(invoice), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

