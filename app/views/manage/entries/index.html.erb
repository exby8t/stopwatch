<% unless params.has_key? :widget %>   
<h1>Listing entries</h1>
<% end %>
<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Date</th>
    <th>Time</th>
    <th>Description</th>
    <th>Developer</th>
    <th>Project</th>
    <th>Category</th>
    <th>Invoice</th>
    <th></th>
    
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.date %></td>
    <td><%= entry.time %></td>
    <td><%= entry.description %></td>
    <td><%= entry.developer %></td>
    <td><%= entry.project %></td>
    <td><%= entry.category %></td>
    <td><%= entry.invoice_id %>
    <td>
        <%= link_to 'Show', manage_entry_path(entry), :class => "btn btn-primary btn-small" %> 
        <%= link_to 'Edit', edit_manage_entry_path(entry) , :class => 'btn btn-small' %> 
        <%= link_to 'Destroy', manage_entry_path(entry), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger btn-small' %></td>
    

  </tr>
<% end %>
</table>

<br />


<%= link_to 'New Entry', new_manage_entry_path %>
