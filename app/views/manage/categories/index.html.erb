<h1>Listing categories</h1>

<table class="table table-bordered table-striped table-hover">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Rate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.code %></td>
    <td><%= category.rate %></td>
    <td><%= link_to 'Show', manage_category_path(category) %></td>
    <td><%= link_to 'Edit', edit_manage_category_path(category) %></td>
    <td><%= link_to 'Destroy', manage_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

